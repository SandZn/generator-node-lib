{
  "name": "<%= appname.value %>",
  "version": "<%= props.version %>",
  "main": "lib/index.js",
  "scripts": {
    "test": "node_modules/.bin/grunt jshint && node_modules/.bin/nodeunit test/",
    "coveralls": "node_modules/.bin/jscoverage lib && <%= appname.covName %>=1 node_modules/.bin/nodeunit --reporter=lcov test/ | node_modules/.bin/coveralls"
  },
  "description": "",
  "keywords": [],
  <% if (props.license) { %>
    "license": "<%= props.license %>",
  <% } %>
  <% if (repository) { %>
    "author": "<%= repository.user %>",
    "repository": {
      "type": "git",
      "url": "<%= repository.url %>.git"
    },
    "bugs": {
      "url": "<%= repository.url %>/issues"
    },
    "homepage": "<%= repository.url %>",
  <% } %>
  "dependencies": {},
  "devDependencies": {
    "grunt": "^0.4.5",
    "grunt-cli": "^0.1.13",
    "grunt-contrib-jshint": "^0.11.0",
    "grunt-contrib-nodeunit": "^0.4.1",
    "grunt-contrib-watch": "^0.6.1",
    "grunt-newer": "^1.1.0",
    "grunto": "^1.2.1",
    "jscoverage": "^0.5.9",
    "coveralls": "^2.11.2",
    "nodeunit": "^0.9.0"
  }
}
