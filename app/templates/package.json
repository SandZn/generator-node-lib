{
  "name": "<%= app.name %>",
  "version": "<%= version %>",
  "main": "lib/index.js",
  "scripts": {
<% if (coveralls) { %>
    "coveralls": "node_modules/.bin/jscoverage lib && <%= app.coverageEnvName %>=1 node_modules/.bin/nodeunit --reporter=lcov test/ | node_modules/.bin/coveralls",
<% } %>
    "test": "node_modules/.bin/grunt jshint && node_modules/.bin/nodeunit test/"
  },
  "description": "",
  "keywords": [],
  "license": "<%= license || '' %>",
<% if (repository) { %>
  "author": "<%= repository.user %>",
  "repository": {
    "type": "git",
    "url": "<%= repository.url %>.git"
  },
  "bugs": {
    "url": "<%= repository.url %>/issues"
  },
  "homepage": "<%= repository.url %>",
<% } %>
  "dependencies": {},
  "devDependencies": {
<% if (coveralls) { %>
    "jscoverage": "^0.5.9",
    "coveralls": "^2.11.2",
<% } %>
<% if (testEngine === 'nodeunit') { %>
    "nodeunit": "^0.9.1",
<% } %>
    "grunt": "^0.4.5",
    "grunt-cli": "^0.1.13",
    "grunt-contrib-jshint": "^0.12.0",
    "grunt-contrib-nodeunit": "^0.4.1",
    "grunt-contrib-watch": "^0.6.1",
    "grunt-newer": "^1.1.1",
    "grunto": "^1.4.2"
  }
}
